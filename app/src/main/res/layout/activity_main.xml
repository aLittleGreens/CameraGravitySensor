<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gravitysensor.MainActivity">

    <TextureView
        android:id="@+id/textureview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_camera_top_bar_close_w"/>

        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_camera_top_bar_more_w"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_camera_top_bar_switch_b_w"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/album_w"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/iv_beauty"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/beauty_w"
            android:layout_margin="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_face"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/sticker_new_w_6"
            android:layout_margin="7dp"/>

        <ImageView
            android:id="@+id/iv_filter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/preview_filter_w"
            android:layout_margin="10dp"/>

    </LinearLayout>

</RelativeLayout>
